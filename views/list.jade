doctype 5
html(lang='zh-CN')
    head
        title Colorwork CI Server - Overview
        link(href="/css/bootstrap.min.css",rel="stylesheet",media="screen")
    body
        div.container
            div.navbar
                div.navbar-inner
                    a.brand Simple-CI
                    ul.nav
                        li.active
                            a(href='/') Home
            h2 系统信息
            table.table.table-bordered
                each bline in hostinfo
                    tr.info
                        td= bline[0]
                        td= bline[1]
                        td= bline[2]
                        td= bline[3]

        include footer
